<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical">


    <TextView
        android:id="@+id/log_detail_tag_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tag: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/log_detail_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/log_detail_process_hint"
        android:text="LogCatManager"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/log_detail_level_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_detail_tag"
        android:text="Level: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/log_detail_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_detail_tag"
        android:layout_toRightOf="@+id/log_detail_process_hint"
        android:text="D"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/log_detail_time_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_detail_level"
        android:text="Time: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/log_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_detail_level"
        android:layout_toRightOf="@+id/log_detail_process_hint"
        android:text="1990"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/log_detail_process_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_detail_time"
        android:text="Process: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/log_detail_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_detail_time"
        android:layout_toRightOf="@+id/log_detail_process_hint"
        android:text="1234"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/log_detail_content_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_detail_process"
        android:text="Content: "
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_detail_content_hint">

        <TextView
            android:id="@+id/log_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/log_detail_process_hint"
            android:text="聒噪...啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
            android:textSize="18sp" />
    </ScrollView>
</RelativeLayout>